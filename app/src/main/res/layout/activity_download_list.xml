<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/pause_task_btn"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="暂停所有下载任务"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/start_task_btn"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="恢复所有下载任务"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/download_listview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/top_layout"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="2px"
        android:layout_marginBottom="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/add"/>
    <TextView
        android:id="@+id/tv_empty"
        android:text="暂无任务"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"
        android:drawableTop="@drawable/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/info"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="介绍"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:drawableTop="@drawable/info_uncheck"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pause"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="暂停所有"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:drawableTop="@drawable/pause_uncheck"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="开始所有"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:drawableTop="@drawable/start_uncheck"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/setting"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="设置"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:drawableTop="@drawable/setting_uncheck"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
